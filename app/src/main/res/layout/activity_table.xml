<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ad1_top_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Table Details"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/table_recycler_view"
            android:layout_below="@id/ad1_top_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/add_table_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="8dp"
        android:layout_below="@id/table_recycler_view"
        android:background="@color/white"
        android:gravity="center"

        android:padding="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/table_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:hint="Enter Table No"
            android:padding="9dp" />

        <EditText
            android:id="@+id/table_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dish_name"
            android:background="@drawable/round_border"
            android:padding="9dp"
            android:hint="Enter Table Status" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/menu_count"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_border"
            android:hint="Enter Table Capacity"
            android:padding="9dp"
            android:id="@+id/table_capacity"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_border"
            android:hint="No orders"
            android:textAlignment="center"
            android:padding="9dp"
            android:id="@+id/order_table"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_table"
            android:textColor="@color/white"
            android:elevation="6dp"
            android:background="@drawable/round_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Add/Update" />

    </LinearLayout>


</RelativeLayout>

</ScrollView>