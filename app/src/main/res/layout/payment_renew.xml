<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/payment_renew_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Renew Payment"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/renew_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_renew_top"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/ellipse_border">
        <TextView
            android:id="@+id/payment_renew_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="Select a Payment Method"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:textSize="13sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CDCDCD"
            android:layout_marginTop="10dp"/>

        <RadioGroup
            android:id="@+id/renew_RadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"

            >


            <RadioButton
                android:id="@+id/renew_cashpayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Paid "
                android:padding="5dp"/>


        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/renew_linear_layout"
        android:gravity="end">
        <Button
            android:id="@+id/ok_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="OK"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_button"/>
    </LinearLayout>

</RelativeLayout>