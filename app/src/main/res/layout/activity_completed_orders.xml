<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompletedOrders">

<LinearLayout
android:id="@+id/comp_pay_linearLayout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="@color/colorPrimary">

<TextView
    android:id="@+id/compaddmenuInput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:drawablePadding="10dp"
    android:text="Completed Payments"
    android:textAlignment="center"
    android:background="@drawable/round_search"
    android:fontFamily="@font/montserrat"
    android:backgroundTint="@color/colorPrimaryVariant"
    android:padding="12dp"
    android:textColor="@color/white"
    android:textColorHint="@color/white"
    android:textSize="12sp" />


</LinearLayout>

<androidx.recyclerview.widget.RecyclerView
android:id="@+id/completed_payments_recyclerView"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_below="@+id/comp_pay_linearLayout">

</androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>